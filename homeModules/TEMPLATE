{ config, lib, pkgs, osConfig, ... }:

let cfg = config.${osConfig.networking.hostName}.home.firefox;
in {
  options.${osConfig.networking.hostName}.home.firefox.enable = lib.mkEnableOption "Firefox";
  config = lib.mkIf cfg.enable {
    home = {
      packages = with pkgs; [
        firefox
      ];
    };
  };
}
