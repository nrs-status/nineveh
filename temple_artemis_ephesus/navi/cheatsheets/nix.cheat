% nix

# query a store path to determine what's keeping it alive
nix-store --query --roots <path>

# delete specified generations
nix-env --delete-generations <generations>

$ generations: echo 'generation_number old' | tr ' ' '\n' --- --map "rg \"(generation_number|old)\" && echo \"enter the argument and press tab instead of choosing one of the options and pressing enter \" || xargs echo"
