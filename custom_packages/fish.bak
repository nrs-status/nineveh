{ stdenv
, lib
, fetchFromGitHub
, git
, fish
, which
}:

stdenv.mkDerivation (finalAttrs: {
  pname = "oh-my-fish";
  version = "2023-01-22";

  src = fetchFromGitHub {
    owner = "oh-my-fish";
    repo = "oh-my-fish";
    rev = "d427501";
    hash = "sha256-dwaA1bJiYcjpWQa4+5R79RohcmKngOHEe7plZt2spr0=";
  };

  buildInputs = [
    git
    fish
    which
  ];

  installPhase = ''
    fish bin/install --offline --noninteractive
  '';
})
